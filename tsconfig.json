{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": ["dom", "es2016"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "include": [
        "**/**/**/*.ts",
        "**/**/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}
